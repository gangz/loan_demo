<div class="hero-unit">
    <h1>房贷审批模拟</h1>

    <p>欢迎使用房贷计算审批模拟程序</p>

    <p>
        <a class="btn btn-large" href="rules.htm">查看规则</a>
    </p>
</div>

<form class="form-horizontal" method="post">

    <div class="row">
        <div class="span6">
            <fieldset>
                <legend>主贷人信息</legend>
                <div class="control-group">
                    <label class="control-label" for="primary_borrower_name">姓名</label>

                    <div class="controls">
                        <input type="text" class="input-xlarge" id="primary_borrower_name"
                               name="primary_borrower_name" value=<%= the_primary_borrower_name %>>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="primary_borrower_gender1">性别</label>

                    <div class="controls">
                        <label class="radio-inline">
                            <input type="radio" name="primary_borrower_gender" id="primary_borrower_gender1"
                                   value="option1" checked> 男
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="primary_borrower_gender" id="primary_borrower_gender2"
                                   value="option2"> 女
                        </label>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="primary_borrower_id">身份证号</label>

                    <div class="controls">
                        <input type="text" class="input-xlarge" id="primary_borrower_id" name="primary_borrower_id"
                               value=<%= the_primary_borrower_id %> >
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="primary_borrower_suites">既有房产数目</label>

                    <div class="controls">
                        <input type="text" class="input-xlarge" id="primary_borrower_suites"
                               name="primary_borrower_suites" value=<%= the_primary_borrower_suites %> >
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="primary_borrower_credit">信用等级</label>

                    <div class="controls">
                        <select class="span3" id="primary_borrower_credit" name="primary_borrower_credit" value=<%=the_primary_borrower_credit%>>
                            <option>A</option>
                            <option>B</option>
                            <option>C</option>
                            <option>D</option>
                            <option>E</option>
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="primary_borrower_monthly_income">月收入</label>

                    <div class="controls">
                        <div class="input-prepend input-append">
                            <span class="add-on" style="margin-right: -5px;">￥</span>
                            <input type="text" class="input-large" id="primary_borrower_monthly_income"
                                   name="primary_borrower_monthly_income" value=<%= the_primary_borrower_monthly_income %> >
                            <span class="add-on" style="margin-left: -5px;">元</span>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="primary_borrower_current_debts">现有贷款（每月还款额）</label>

                    <div class="controls">
                        <div class="input-prepend input-append">
                            <span class="add-on" style="margin-right: -5px;">￥</span>
                            <input type="text" class="input-large" id="primary_borrower_current_debts"
                                   name="primary_borrower_current_debts" value=<%= the_primary_borrower_current_debts %> >
                            <span class="add-on" style="margin-left: -5px;">元</span>
                        </div>
                    </div>
                </div>

            </fieldset>
        </div>

        <div class="span6">
            <fieldset>
                <legend>利率信息</legend>
                <div class="control-group">
                    <label class="control-label" for="base_interest">基准利率</label>

                    <div class="controls">
                        <div class="input-append">
                            <input type="text" class="input-large" id="base_interest" name="base_interest"
                                   value=<%= base_interests %> >
                            <span class="add-on" style="margin-left: -5px;">%</span>
                        </div>
                    </div>
                </div>
            </fieldset>
            <br>
            <fieldset>
                <legend>住房和房贷信息</legend>
                <div class="control-group">
                    <label class="control-label" for="total_price">房产总价</label>

                    <div class="controls">
                        <div class="input-prepend input-append">
                            <span class="add-on" style="margin-right: -5px;">￥</span>
                            <input type="text" class="input-large" id="total_price" name="total_price"
                                   value=<%= the_total_price %> >
                            <span class="add-on" style="margin-left: -5px;">元</span>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="first_payment">首付金额</label>

                    <div class="controls">
                        <div class="input-prepend input-append">
                            <span class="add-on" style="margin-right: -5px;">￥</span>
                            <input type="text" class="input-large" id="first_payment" name="first_payment"
                                   value=<%= the_first_payment %> >
                            <span class="add-on" style="margin-left: -5px;">元</span>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="applied_years">申请贷款年限</label>

                    <div class="controls">
                        <div class="input-append">
                            <input type="text" class="input-large" id="applied_years" name="applied_years"
                                   value=<%= the_applied_years %> >
                            <span class="add-on" style="margin-left: -5px;">年</span>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="house_build_date">房产竣工日期</label>

                    <div class="controls">
                        <input data-date="2010-01-01" data-date-format="yyyy-mm-dd"
                               type="text" id="house_build_date" name="house_build_date" value=<%= the_house_build_date %>>
                    </div>
                </div>
            </fieldset>

        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary pull-right">贷款审批</button>
    </div>

    <div>
        <fieldset>
            <legend>审批结果</legend>
            <div class="control-group">
                <label class="control-label" for="result">贷款资格审查</label>

                <div class="controls">
                    <div class="input-append">
                        <input type="select" class="input-xlarge" id="result" name="result" value=<%= the_approve_result %>>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="result_interests">适用利率</label>

                <div class="controls">
                    <div class="input-append">
                        <input type="text" class="input-large" id="result_interests" name="result_interests"
                               value=<%= the_approved_interests %>>
                        <span class="add-on" style="margin-left: -5px;">%</span>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="result_years">贷款年限</label>

                <div class="controls">
                    <div class="input-append">
                        <input type="text" class="input-large" id="result_years" name="result_years" value=<%= the_approved_years %>>
                        <span class="add-on" style="margin-left: -5px;">年</span>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="result_amount">贷款额度</label>

                <div class="controls">
                    <div class="input-prepend input-append">
                        <span class="add-on" style="margin-right: -5px;">￥</span>
                        <input type="text" class="input-large" id="result_amount" name="result_amount" value=<%= the_approved_amount %>>
                        <span class="add-on" style="margin-left: -5px;">元</span>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>

</form>


